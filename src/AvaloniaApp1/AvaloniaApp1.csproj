<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <PublishTrimmed>true</PublishTrimmed>
        <PublishSingleFile>true</PublishSingleFile>
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    </PropertyGroup>
    <ItemGroup>
        <Compile Update="**\*.xaml.cs">
            <DependentUpon>%(Filename)</DependentUpon>
        </Compile>
        <AvaloniaResource Include="**\*.xaml">
            <SubType>Designer</SubType>
        </AvaloniaResource>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Avalonia" Version="0.10.0-preview*" />
        <PackageReference Include="Avalonia.Desktop" Version="0.10.0-preview*" />
        <PackageReference Include="Avalonia.Diagnostics" Version="0.10.0-preview*" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\AvaloniaIconPacks\AvaloniaIconPacks.csproj" />
    </ItemGroup>
</Project>